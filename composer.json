{
	"name": "dekode/dekode-mu-plugins",
	"description": "WordPress must-use plugin for Dekode",
	"license": "GPL-3.0+",
	"type": "wordpress-muplugin",
	"require": {
		"php": ">=7.0",
		"composer/installers": "1.7.0"
	},
	"require-dev": {
		"dekodeinteraktiv/coding-standards": "3.1.0"
	},
	"scripts": {
		"lint" : [
			"@composer install",
			"./vendor/bin/phpcs"
		],
		"format": [
			"@composer install",
			"./vendor/bin/phpcbf --report-summary --report-source"
		],
		"build-for-deploy" : [
			"@composer install --no-dev"
		]
	},
	"archive": {
		"exclude": [
			".editorconfig",
			".gitignore",
			"composer.json",
			"composer.lock",
			"phpcs.xml.dist",
			".github"
		]
	}
}
