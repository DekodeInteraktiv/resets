{
	"name": "dekodeinteraktiv/resets",
	"description": "WordPress must-use plugin for Dekode",
	"license": "GPL-3.0+",
	"type": "wordpress-muplugin",
	"require": {
		"php": ">=7.0"
	},
	"require-dev": {
		"dekodeinteraktiv/coding-standards": "3.1.0"
	},
	"scripts": {
		"lint" : [
			"@composer install",
			"./vendor/bin/phpcs"
		],
		"format": [
			"@composer install",
			"./vendor/bin/phpcbf --report-summary --report-source"
		],
		"build-for-deploy" : [
			"@composer install --no-dev"
		]
	}
}
